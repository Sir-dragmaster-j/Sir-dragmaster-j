<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Sujay J - Purple Flow Header</title>
<style>
  body {
    margin: 0;
    background: #0e0e12;
    overflow: hidden;
  }

  canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 260px;
  }

  .neon-text {
    position: absolute;
    width: 100%;
    text-align: center;
    top: 70px;
    font-family: "Orbitron", sans-serif;
    font-size: 32px;
    color: #fff;
    text-shadow: 0 0 10px #a000ff, 0 0 20px #7a00ff, 0 0 40px #b300ff;
  }

  .typing {
    border-right: 3px solid #bc00ff;
    white-space: nowrap;
    overflow: hidden;
    width: 0;
    animation: typing 5s steps(40, end) infinite, blink 0.6s step-end infinite alternate;
  }

  @keyframes typing {
    0%, 10% { width: 0; }
    40%, 60% { width: 90%; }
    90%, 100% { width: 0; }
  }

  @keyframes blink {
    50% { border-color: transparent; }
  }
</style>
</head>
<body>
  <canvas id="wave"></canvas>
  <div class="neon-text"><span id="typed" class="typing"></span></div>

  <script>
    // === Typing Lines ===
    const lines = [
      "Hey there ðŸ‘‹ I'm Sujay J",
      "Frontend Developer ðŸ’» | ML Enthusiast ðŸ¤–",
      "Building sleek UIs & intelligent systems ðŸš€"
    ];
    let i = 0;
    const el = document.getElementById("typed");
    function loop() {
      el.textContent = lines[i];
      i = (i + 1) % lines.length;
    }
    loop();
    setInterval(loop, 5000);

    // === Smooth Wave Animation ===
    const canvas = document.getElementById("wave");
    const ctx = canvas.getContext("2d");
    let w, h, t = 0;

    function resize() {
      w = canvas.width = window.innerWidth;
      h = canvas.height = 260;
    }
    window.addEventListener("resize", resize);
    resize();

    function draw() {
      ctx.clearRect(0, 0, w, h);
      const gradient = ctx.createLinearGradient(0, 0, w, 0);
      gradient.addColorStop(0, "#6a00ff");
      gradient.addColorStop(0.5, "#8a2be2");
      gradient.addColorStop(1, "#bc00ff");

      ctx.fillStyle = gradient;
      ctx.beginPath();
      ctx.moveTo(0, h / 2);
      for (let x = 0; x <= w; x += 10) {
        const y = h / 2 + Math.sin((x + t) * 0.015) * 25 + Math.sin((x + t) * 0.04) * 10;
        ctx.lineTo(x, y);
      }
      ctx.lineTo(w, h);
      ctx.lineTo(0, h);
      ctx.closePath();
      ctx.fill();
      t += 2;
      requestAnimationFrame(draw);
    }
    draw();
  </script>
</body>
</html>
